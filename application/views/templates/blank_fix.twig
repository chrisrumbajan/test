											<td>Lorem ipsum sir dolor amet lorem ipsum sir dolor amet</td>
											<td align="center">
												<object data="{{ resource_url }}img/logo-unsrat.png" type="image/png" width="80">
													<img src="{{ default_img }}" width="200"/>
