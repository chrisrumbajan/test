  <!-- modal tambah -->
  <div class="modal fade" id="mdl-tambah">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Tambah</h4>
        </div>
        {{ form_open('') }}
        <div class="modal-body">
          <div class="form-group">
            <label>Select2</label>
            <select name="" class="sel_kategori form-control" id="select2-contoh"
              data-placeholder="ketik kata kunci ..">
            </select>
          </div>
          <div class="form-group">
            <label>Input</label>
            <input name="" type="text" class="form-control tik_num">
          </div>
          <div class="form-group">
            <label>Textarea</label>
            <textarea name="" type="text" class="form-control"></textarea>
          </div>
          <label>Checkboxes:</label>
          <div class="form-group row">
            <div class="col-4">
              <div class="custom-control custom-checkbox">
                <input name="" class="custom-control-input" type="checkbox" id="customCheckbox1" value="1">
                <label for="customCheckbox1" class="custom-control-label" style="font-weight: normal;">A</label>
              </div>
            </div>
            <div class="col-4">
              <div class="custom-control custom-checkbox">
                <input name="" class="custom-control-input" type="checkbox" id="customCheckbox2" value="1">
                <label for="customCheckbox2" class="custom-control-label" style="font-weight: normal;">B</label>
              </div>
            </div>
            <div class="col-4">
              <div class="custom-control custom-checkbox">
                <input name="" class="custom-control-input" type="checkbox" id="customCheckbox3" value="1">
                <label for="customCheckbox3" class="custom-control-label" style="font-weight: normal;">C</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Text editor</label>
            <textarea id="text_editor_summernote" placeholder="Place some text here"
              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
          </div>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-success">Simpan</button>
        </div>
        {{ form_close() }}
      </div>
    </div>
  </div>

  <!-- modal edit -->
  <div class="modal fade" id="mdl-edit">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit</h4>
        </div>
        {{ form_open('') }}
        <div class="modal-body">
          <div class="form-group">
            <label>Select2</label>
            <select name="" class="sel_kategori form-control"
              data-placeholder="ketik kata kunci ..">
            </select>
          </div>
          <div class="form-group">
            <label>Input</label>
            <input name="" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label>Textarea</label>
            <textarea name="" type="text" class="form-control"></textarea>
          </div>
          <label>Radio button:</label>
          <div class="form-group row">
            <div class="col-4">
              <div class="custom-control custom-checkbox">
                <input name="" class="custom-control-input" type="checkbox" id="customRadioButton1" value="1">
                <label for="customRadioButton1" class="custom-control-label" style="font-weight: normal;">A</label>
              </div>
            </div>
            <div class="col-4">
              <div class="custom-control custom-checkbox">
                <input name="" class="custom-control-input" type="checkbox" id="customRadioButton2" value="1">
                <label for="customRadioButton2" class="custom-control-label" style="font-weight: normal;">B</label>
              </div>
            </div>
            <div class="col-4">
              <div class="custom-control custom-checkbox">
                <input name="" class="custom-control-input" type="checkbox" id="customRadioButton3" value="1">
                <label for="customRadioButton3" class="custom-control-label" style="font-weight: normal;">C</label>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-success">Simpan</button>
        </div>
        {{ form_close() }}
      </div>
    </div>
  </div>

  <!-- modal lihat -->
  <div class="modal fade" id="mdl-lihat">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Lihat/detail</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        {{ form_open('') }}
        <div class="modal-body">
          Bisa berisi tabel, input readonly, heading, dll.
        </div>
        {{ form_close() }}
      </div>
    </div>
  </div>

  <!-- modal hapus -->
  <div class="modal fade" id="mdl-hapus">
    <div class="modal-dialog modal-sm">
      {{ form_open('') }}
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Hapus</h4>
        </div>
        <div class="modal-body">
          Yakin menghapus <b>(nama_objek)</b>?
          <input type="hidden" name="del_hps_id" id="hps_id"/>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-danger">Hapus</button>
        </div>
      </div>
      {{ form_close() }}
    </div>
  </div>

  <!-- modal validasi -->
  <div class="modal fade" id="mdl-validasi">
    <div class="modal-dialog modal-sm">
      {{ form_open('') }}
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Validasi</h4>
        </div>
        <div class="modal-body">
          Validasi <b>(nama_objek)</b>?
          <input type="hidden" name="del_validasi_id" id="validasi_id"/>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary">Ya</button>
        </div>
      </div>
      {{ form_close() }}
    </div>
  </div>

  <!-- select 2 -->
  <script src="{{ resource_url }}adminlte3/plugins/select2/js/select2.min.js"></script>

  <!-- DataTables -->
  <script src="{{ resource_url }}adminlte3/plugins/datatables/jquery.dataTables.js"></script>
  <script src="{{ resource_url }}adminlte3/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

  <!-- Summernote -->
  <script src="{{ resource_url }}adminlte3/plugins/summernote/summernote-bs4.min.js"></script>
  <script>
    // datatable
    $('#datatable').DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
    });
	
    // initialize select2
    $(".select2").select2({
      theme: 'bootstrap4'
	  });

    // summernote
    $('#text_editor_summernote').summernote();

    $(document).ready(function() {
			// contoh select2 data ajax
			$("#select2-contoh").select2({
				placeholder: "Ketik kata kunci...",
				minimumInputLength: 1,
				theme: "bootstrap4",
				allowClear: true,
				ajax: {
					url: "{{ base_url('beranda/blank_fix/get_data_select2_ajax') }}",
					dataType: 'json',
					delay: 250,
					data: function(params) {
						return {
							search: params.term
						}
					},
					processResults: function (data) {
						return {
							results: $.map(data, function (item) {
								return {
									id: item.id,
									text: item.nama
								}
							})
						};
					}
				}
			});
		});

  </script>
